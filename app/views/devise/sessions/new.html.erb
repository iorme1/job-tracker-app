<div class="devise-forms mb-3">
  <h2 class="devise-title-font">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, class: "devise-label m-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "devise-label m-2" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-sm btn-info m-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
